{
  "name": "bonditka/yii2-task",
  "description": "System of task.",
  "type": "yii2-extension",
  "keywords": ["yii2", "extension", "task"],
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Ekaterina Sergeeva",
      "email": "ekaterina@sergeeva.site",
      "homepage": "http://www.sergeeva.site"
    }
  ],
  "support": {
    "issues": "https://github.com/bonditka/yii2-task/issues?state=open",
    "source": "https://github.com/bonditka/yii2-task"
  },
  "require": {
    "yiisoft/yii2": "~2.0.0"
  },
  "require-dev": {
    "vlucas/phpdotenv": "^2.0",
    "yiisoft/yii2-faker": "~2.0.0",

    "codeception/codeception": "~2.2.0",
    "codeception/verify": "~0.3.1",
    "codeception/specify": "~0.4.3"
  },
  "autoload": {
    "psr-4": {
      "bonditka\\task\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "bonditka\\task\\tests\\": "tests/"
    }
  },
  "extra": {
    "asset-installer-paths": {
      "npm-asset-library": "vendor/npm",
      "bower-asset-library": "vendor/bower"
    }
  }
}